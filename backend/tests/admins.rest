# Cập nhật thông tin admin
PUT http://localhost:3000/api/admins/674b2f8e123456789abcdef8
Content-Type: application/json

{
  "fullName": "Nguyễn Văn Admin Updated",
  "phone": "0987654322",
  "permissions": ["read", "write", "delete", "manage_bookings"]
}

###

# Thay đổi mật khẩu admin
PUT http://localhost:3000/api/admins/674b2f8e123456789abcdef8/password
Content-Type: application/json

{
  "currentPassword": "123456",
  "newPassword": "newpassword123"
}

###

# Cập nhật trạng thái admin
PUT http://localhost:3000/api/admins/674b2f8e123456789abcdef8/status
Content-Type: application/json

{
  "isActive": false
}

###

# Xóa admin
DELETE http://localhost:3000/api/admins/674b2f8e123456789abcdef8

###

# Đăng nhập admin (tương tự auth)
POST http://localhost:3000/api/auth/admin/login
Content-Type: application/json

{
  "email": "admin@spa.com",
  "password": "123456"
}

###

# Lấy thống kê admin
GET http://localhost:3000/api/admins/stats

###

# Lấy admin theo role
GET http://localhost:3000/api/admins?role=admin

###

# Lấy admin theo trạng thái
GET http://localhost:3000/api/admins?active=true

